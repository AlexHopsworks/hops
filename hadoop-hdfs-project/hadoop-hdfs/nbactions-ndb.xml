<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>test.single</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>test-compile</goal>
                <goal>surefire:test</goal>
            </goals>
            <properties>
                <test>${packageClassName}</test>
                <Env.LIBNDBPATH>/usr/local/mysql/lib</Env.LIBNDBPATH>
                <Env.DYLD_LIBRARY_PATH>/usr/local/mysql/lib</Env.DYLD_LIBRARY_PATH>
                
                
                
                
                
                <Env.LD_LIBRARY_PATH>/usr/local/lib</Env.LD_LIBRARY_PATH>
                
                
                <Env.PATH>/usr/local/opt/protobuf@2.5/bin:/usr/local/sbin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</Env.PATH>
            </properties>
        </action>
        <action>
            <actionName>debug.test.single</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>test-compile</goal>
                <goal>surefire:test</goal>
            </goals>
            <properties>
                <test>${packageClassName}</test>
                <forkMode>once</forkMode>
                <maven.surefire.debug>-agentlib:jdwp=transport=dt_socket,server=n,address=${jpda.address}</maven.surefire.debug>
                <jpda.listen>true</jpda.listen>
                <Env.LIBNDBPATH>/usr/local/mysql/lib</Env.LIBNDBPATH>
                <Env.DYLD_LIBRARY_PATH>/usr/local/mysql/lib</Env.DYLD_LIBRARY_PATH>
                
                <Env.LD_LIBRARY_PATH>/usr/local/lib</Env.LD_LIBRARY_PATH>
                <Env.PATH>/usr/local/opt/protobuf@2.5/bin:/usr/local/sbin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</Env.PATH>
            </properties>
        </action>
        <action>
            <actionName>build</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>install</goal>
                <goal>generate-sources</goal>
            </goals>
            <properties>
                <skipTests>true</skipTests>
            </properties>
        </action>
        <action>
            <actionName>build-with-dependencies</actionName>
            <reactor>also-make</reactor>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>install</goal>
                <goal>generate-sources</goal>
            </goals>
            <properties>
                <skipTests>true</skipTests>
                <Env.PATH>/usr/local/opt/protobuf@2.5/bin:/usr/local/sbin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</Env.PATH>
                <Env.LD_LIBRARY_PATH>/usr/local/lib</Env.LD_LIBRARY_PATH>
            </properties>
            <activatedProfiles>
                <activatedProfile>ndb</activatedProfile>
                <activatedProfile>os.mac</activatedProfile>
            </activatedProfiles>
        </action>
    </actions>
